<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <appSettings>
        <!-- Browser process limits -->
        <add key="MaxMemoryForInstance" value="2500" />
        <add key="MaxAgeForInstance" value="60" />
        
        <!-- Main ZennoPoster process limit -->
        <add key="MaxMemoryForZennoposter" value="30000" />
        
        <!-- Kill flags -->
        <add key="KillOld" value="True" />
        <add key="KillHeavy" value="True" />
        <add key="KillMain" value="False" />
        
        <!-- Auto-check settings (0 = disabled) -->
        <add key="AutoCheckInterval" value="0" />
        
        <!-- UI settings -->
        <add key="ShowLogs" value="False" />
        <add key="ShowRawCommandLine" value="True" />
    </appSettings>
</configuration>